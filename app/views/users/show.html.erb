<%# Google Fonts %>
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@100&display=swap" rel="stylesheet">



<%# Banner Component %>
<div class="profile-banner">
  <div class="container">
     <div class="image-container">
      <img src="https://i.pravatar.cc/300" alt="avatar-image">
    </div>
    <div class="profile-content">
    <h1><%= current_user.first_name %> <%= current_user.last_name %></h1>
      <p>User Id: <%= @user_id %></p>
      <p>Representing <%= current_user.org_name %></p>
      <p>Sponsoring <%= current_user.projects.count %> projects</p>
      <p>Contribution points <%= current_user.total_points %> pt</p>
      <p>Our mission is to keep local parks clean so our customers can enjoy their weekends</p>
    </div>
  </div>
</div>

<h1>My Projects</h1>

<%# card component for projects%>
<div class ="card-container">
  <% @user_projects.each do |project| %>
    <div class="card-list">
          <div class="project-card">
            <img class="profile-image" src="https://picsum.photos/460/250" alt="Place-holder-images">
              <div class="card-stats">
                <ol>
                  <ul>Project name: <%= project.project_name.capitalize %></ul>
                  <ul>Starts: <%= project.start_date %></ul>
                  <ul>Ends: <%= project.end_date %></ul>
                  <ul><%= link_to 'Project detail', project_path(project) %></li>
                </ol>
              </div>
      </div>
    </div>
  <% end %>
</div>

<h1>My Contributions</h1>

<%# card component for contributions %>
<div class ="card-container">
  <% @user_contributions.each do |contribution| %>
    <div class="card-list">
      <div class="project-card">
        <img class="profile-image" src="https://picsum.photos/460/250" alt="Place-holder-images">

        <div class="card-stats">
          <ol>
            <ul>Contribution for <%= contribution.project.project_name %></ul>
            <ul>Status: <%= contribution.status %></ul>
            <ul>Project Name: <%= contribution.project.project_name.capitalize %></ul>
            <ul>Starts: <%= contribution.start_date %></ul>
            <ul>Ends: <%= contribution.end_date %></ul>
            <ul><%= link_to 'Contribution detail', sponsor_contribution_path(contribution) %></ul>
          </ol>
        </div>
      </div>
    </div>
  <% end %>
</div>
