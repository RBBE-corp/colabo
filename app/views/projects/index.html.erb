
<%# Banner Component %>
<div class="banner">
  <div class="container">
    <h1>Index Page for Projects</h1>
    <p>All the projects will be listed here</p>
    <p>Edit Code to show just the current_user's projects</p>
  </div>
</div>
<% if user_signed_in? %>
<div class="container search-bar">
  <%= form_tag projects_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find projects"
    %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>
</div>
<% end %>
<%# card component %>

<div class ="card-container">
  <% @projects.each do |project| %>
    <div class="project-card">
      <img class="profile-image" src="https://picsum.photos/460/250" alt="Place-holder-images">
        <div class="card-stats">
          <ol>
            <ul><strong>Project:</strong> <%= project.project_name.capitalize %></ul>
            <ul><strong>Starts:</strong> <%= project.start_date.strftime("%d/%m/%y %H:%M")  %></ul>
            <ul><strong>Ends:</strong> <%= project.end_date.strftime("%d/%m/%y %H:%M")  %></ul>
            <ul><%= link_to 'Project detail', project_path(project), :class => 'btn btn-secondary' %></li>
          </ol>
        </div>
    </div>
  <% end %>
</div>





