
<%# Banner Component %>
<div class="banner">
  <div class="container">
    <h1>Index Page for Projects</h1>
    <p>All the projects will be listed here</p>
    <p>Edit Code to show just the current_user's projects</p>
  </div>
</div>
<% if user_signed_in? %>
<div class="container search-bar">
  <%= form_tag projects_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find projects"
    %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>
</div>
<% end %>
<%# card component %>



<div class ="projects-card-container">
  <% @projects.each do |project|%>
    <div class="project-card">
      <%# <div class="image-container"> %>

          <img class="profile-image" src="<%= project.photo.attached? ? cl_image_path(project.photo.key) : image_path('helping.png') %>">

          <div class="card-stats">
          <ol>
            <ul><bdi><%= project.project_name.capitalize %></bdi></ul>
            <ul><strong>Sponsor:</strong> <%= project.user.org_name %>
            <%# <ul>Description: <%= project.description %></ul>
            <ul><strong>Contributors needed:</strong> <%= project.people_required %></ul>
            <%# <ul>Location: <%= project.location %></ul>
            <%# <ul>Starts: <%= project.start_date %></ul>
            <%# <ul>Ends: <%= project.end_date %></ul>
            <%# <ul>Rewards: <%= project.reward_earned %></ul>
            <%# <ul>Points: <%= project.points_earned %></ul>
            <div class="link-button"><%= link_to 'Details', project_path(project), class: 'btn btn-secondary' %><div>
            <%# <ul class="link-button"><%= link_to 'Edit Status', edit_sponsor_contribution_path(contribution), class: 'btn btn-secondary' %></ul>
            <%# <ul class="link-button"><%= link_to 'Remove Contribution', sponsor_contribution_path(contribution), method: :delete, class: 'btn btn-secondary' %></ul>
          </ol>
        </div>
      <%# </div> %>
    </div>
  <% end %>
</div>
